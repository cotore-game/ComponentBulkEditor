# Auto detect text files and perform LF normalization
* text=auto

# Unity YAML files - force LF
*.meta text eol=lf
*.prefab text eol=lf merge=unityyamlmerge
*.unity text eol=lf merge=unityyamlmerge
*.asset text eol=lf merge=unityyamlmerge
*.mat text eol=lf
*.anim text eol=lf
*.controller text eol=lf

# Unity text-based formats
*.cs text eol=lf diff=csharp
*.shader text eol=lf
*.cginc text eol=lf
*.hlsl text eol=lf
*.compute text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Unity binary files
*.cubemap binary
*.unitypackage binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.psd binary
*.ai binary
*.tga binary
*.tif binary
*.tiff binary
*.exr binary

# Exclude TextMesh Pro files from language statistics
Assets/TextMesh[[:space:]]Pro/** linguist-generated=true linguist-vendored=true

# Mark documentation for language detection
*.md linguist-detectable=true
Documentation~/** linguist-documentation=true